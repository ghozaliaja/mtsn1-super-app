generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id         Int          @id @default(autoincrement())
  name       String
  class      String
  nisn       String?      @unique
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  
  // New fields for QR Attendance
  barcode     String?      @unique
  parentPhone String?

  attendance Attendance[]
  cases      CounselingCase[]
}

enum Role {
  ADMIN
  WALIKELAS
  BK
}

enum CaseStatus {
  PENDING
  PROCESSED
  RESOLVED
}

model User {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  password      String
  role          Role
  assignedClass String? // Only for WALIKELAS
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  reportedCases CounselingCase[] @relation("Reporter")
}

model CounselingCase {
  id            Int        @id @default(autoincrement())
  studentId     Int
  student       Student    @relation(fields: [studentId], references: [id])
  reporterId    Int
  reporter      User       @relation("Reporter", fields: [reporterId], references: [id])
  violationType String     // PC, CB, BR, etc.
  description   String?
  resolution    String?
  status        CaseStatus @default(PENDING)
  createdAt     DateTime   @default(now())
  resolvedAt    DateTime?
  updatedAt     DateTime   @updatedAt
}

model Attendance {
  id        Int      @id @default(autoincrement())
  date      String // YYYY-MM-DD
  studentId Int
  student   Student  @relation(fields: [studentId], references: [id])

  // School Attendance (QR)
  timeIn    DateTime?    // Morning Scan
  status    String?      // Morning Status: PRESENT, LATE
  timeOut   DateTime?    // Afternoon Scan
  statusOut String?      // Afternoon Status: PRESENT, LATE

  // Prayer statuses
  subuh    Boolean @default(false)
  dhuha    Boolean @default(false)
  dzuhur   Boolean @default(false)
  ashar    Boolean @default(false)
  maghrib  Boolean @default(false)
  isya     Boolean @default(false)
  tahajjud Boolean @default(false)
  tarawih  Boolean @default(false)
  puasa    Boolean @default(false)
  alquran  Boolean @default(false)
  
  // WA Notification Status
  waStatus String  @default("PENDING") // PENDING, SENT, FAILED

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([studentId, date]) // One record per student per day
}
